doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Ezpark
        // this is a css framework, bulma.io
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css')
        script(defer='', src='https://use.fontawesome.com/releases/v5.3.1/js/all.js')
        // monospace font, width of every characters are the same
        link(href='https://fonts.googleapis.com/css?family=Roboto+Mono', rel='stylesheet')
        link(rel='stylesheet', href='css/home.css')
        style.
            .title {
                color: #00255d;
            }
    body
        section.section
            .container
                .columns
                    .column.is-offset-one-quarter.is-half.has-text-centered
                        img.logo(src='img/logo.jpg', alt='tset', "='')
                        .columns
                        .column.is-offset-one-quarter.is-half.has-text-left
                        h1.title.has-text-weight-bold Login
                        .field
                        p.control.has-icons-left.has-icons-right
                        input.input(type='email', placeholder='Email or Username')
                            span.icon.is-small.is-left
                                i.fas.fa-user
                            span.icon.is-small.is-right
                                i.fas.fa-check
                        br
                        .field
                            p.control.has-icons-left
                                input.input(type='password', placeholder='Password')
                                span.icon.is-small.is-left
                                    i.fas.fa-lock
                        br
                        div
                            p.control.has-text-centered
                                button.button.is-link
                                    | Login
                            br
                            p.control.has-text-centered
                                a.button.is-text Forget your password?
                            p.has-text-centered
                                a.button.is-text(href='/signup') Register
